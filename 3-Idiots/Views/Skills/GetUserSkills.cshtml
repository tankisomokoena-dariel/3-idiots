@model IEnumerable<IdiotsAPI.UserSkill>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/speech-to-text/speech_to_text.js" type="text/javascript"></script>


    <script>
        window.addEventListener("load", onloadfunction);
    </script>

    <title>Skills</title>
    <link rel="stylesheet" href="~/Content/IdiotsStyleSheet.css">
    <link rel="stylesheet" href="~/Content/listeningMessage.css">

    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #0026ff;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }
    </style>
</head>
<body>
    <table class="table">
        <tr>
            <th></th>
            <th>
                Description
            </th>
            <th>
                Skill Level
            </th>
            <th>
                Level Type
            </th>
           

        </tr>
        @{
            int counter = 1;
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>@counter</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descriprion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SkillLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LevelType)
                </td>
                
            </tr>
            counter = counter + 1;
        }
    </table>
</body>
</html>
